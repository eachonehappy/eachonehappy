<div class="col-md-7">
  <div class="panel panel-default">
    <div class="panel-heading panel-heading-gray">Start a Fundraise</div>
      <div class="panel-body">
        <div class="form-horizontal" role="form">
          <%= form_for(@fundraise) do |f| %>
              <div class="form-group">
                  <label for="inputEmail3" class="col-sm-3 control-label">Subject</label>
                  <div class="col-sm-9">
                  <%= f.text_field :subject, class: 'form-control', :id=>"inputEmail3", :placeholder=>"Subject" %>
                    
                  </div>
              </div>
              <div class="form-group">
                <label for="touch-spin-2" class="col-sm-3 control-label">Goal</label>
                <div class="col-sm-9">
                <%= f.text_field :target, :class=>'form-control', :id=>"touch-spin-2", :placeholder=>"enter funraise goal...", "data-toggle"=>"touch-spin", "data-min"=>"-1000000", "data-max"=>"1000000", "data-prefix"=>"$", "data-step"=>"50", :value=>"200" %>
                </div>
              </div>
              <div class="form-group">
                  <label class="col-sm-3 control-label">Campaign</label>
                  <div class="col-sm-9">
                 

              <%= f.select(:campaign_id, @all_campaign.collect {|c| [c.subject, c.id]},{},
                                   { :size => 5,:class=>"selectpicker","data-live-search" =>"true","data-style"=>"btn-white" }
                                 ) %>

                  </div>
              </div>
              <div class="form-group">
                  <label class="col-sm-3 control-label">Small Description</label>
                  <div class="col-sm-9">
                  <%= f.text_field :small_description, class: 'form-control', :placeholder=>"Small Description..." %>    
                  </div>
              </div>
              <div class="form-group">
                  <label class="col-sm-3 control-label">Large Description</label>
                  <div class="col-sm-9">
                  <%= f.text_area :description, class: 'form-control', :rows=>"4", :placeholder=>"Large Description" %>   
                  </div>
              </div>
              <div class="form-group"> 
                <label for="inputEmail3" class="col-sm-3 control-label">Add a Picture</label> 
                <div class="col-sm-9">          
                  <%= f.file_field :image , :class=>"btn btn-primary btn-sm pull-left"%>
                </div>
              </div>
              
              <div class="form-group">
              <label class="col-sm-3 control-label">Tag Friends</label>
                  <div class="col-sm-9">
                <%= f.select(:user_id, @users.collect {|c| [c.first_name, c.id]},{},
                   { :multiple => true, :size => 5,:class=>"selectpicker","data-live-search" =>"true","multiple data-style"=>"btn-white" }
                 ) %>
              </div>
             </div>
             
              
                     
              <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <%= f.submit "Submit", class: "btn btn-primary" %>
                    </div>
                </div>
              
              <% end %>
          </div>
          
      </div>
  </div>
               
</div>
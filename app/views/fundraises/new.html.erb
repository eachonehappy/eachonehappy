<div class="col-md-8">
<% if @all_campaign.empty? %>
<div class="ibox-title" style="background-color: white;">
      <h1 class="title pull-left" style="margin-top: 10px;
    margin-bottom: 10px; margin-left: 10px;">
        You have not started any campaign 
      </h1>
    
        <%= link_to "Start a Campaign", new_campaign_path, data: { turbolinks: false, disable_with: 'Wait ...' }, class: 'btn btn-primary pull-right ', :style=> "margin-top: 10px;
    margin-right: 10px;"%>
     
      <div class="clearfix"></div>
   
</div>
<% else %>
  <div class="panel panel-default">
    <div class="panel-heading panel-heading-gray">Start a Fundraise</div>
      <div class="panel-body">
        <div class="form-horizontal" role="form">
          <% flash.each do |key, value| %>
            <div class="alert alert-info alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= value %></div>
          <% end %>
          <%= form_for(@fundraise, validate: true, :html =>{:multipart => true}) do |f| %>
              <div class="form-group">
                  <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Title</strong></div>
                  <div class="col-sm-9">
                  <%= f.text_field :subject, class: 'form-control', :placeholder=>"Title" %>
                    
                  </div>
              </div>
              <div class="form-group">
                <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Goal</strong></div>
                <div class="col-sm-9">
                <%= f.text_field :target, :class=>'form-control', :id=>"touch-spin-2", :placeholder=>"enter funraise goal...", "data-toggle"=>"touch-spin", "data-min"=>"-1000000", "data-max"=>"1000000", "data-prefix"=>"$", "data-step"=>"50", :value=>"200" %>
                </div>
              </div>
              <div class="form-group">
                 <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Campaign</strong></div>
                  <div class="col-sm-9">
                 

              <%= f.select(:campaign_id, @all_campaign.collect {|c| [c.subject, c.id]},{},
                                   { :size => 5,:class=>"selectpicker","data-live-search" =>"true","data-style"=>"btn-white" }
                                 ) %>

                  </div>
              </div>
              <div class="form-group">
                 <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Small Description</strong></div>
                  <div class="col-sm-9">
                  <%= f.text_area :small_description, class: 'form-control', :rows=>"2", :placeholder=>"Small Description..." %>    
                  </div>
              </div>
              <div class="form-group">
                  <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong>Larger Description</strong></div>
                  <div class="col-sm-9">
                  <%= f.text_area :description, class: 'form-control', :rows=>"4", :placeholder=>"Large Description" %>   
                  </div>
              </div>
              <div class="form-group"> 
                <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Add a Picture</strong></div>
                <div class="col-sm-9">          
                  <%= f.file_field :image , :class=>"btn btn-primary btn-sm pull-left"%>
                </div>
              </div>
              
              <div class="form-group">
              <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Tag Friends</strong></div>
                  <div class="col-sm-9">
                <%= f.select(:user_id, @users.collect {|c| [c.first_name, c.id]},{},
                   { :multiple => true, :size => 5,:class=>"selectpicker","data-live-search" =>"true","multiple data-style"=>"btn-white" }
                 ) %>
              </div>
             </div>
             
              
                     
              <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <%= f.submit "Submit", class: "btn btn-primary" %>
                    </div>
                </div>
              
              <% end %>
          </div>
          
      </div>
  </div>
  <% end %>  
  <div>
</div>  
  <div class="col-md-6">
  <%= render 'shared/profile' %>
  </div>
  <div class="col-md-6">
   <%= render 'shared/profile' %>
   </div>  
   <%= render 'shared/uberad' %>          
</div>

 <div class="col-md-4" style="padding-left: 25px;" >
  <div class="row">
   <%= render 'shared/profile' %>
   <%= render 'shared/profile' %>
   <%= render 'shared/profile' %>
   
    </div>
  </div>

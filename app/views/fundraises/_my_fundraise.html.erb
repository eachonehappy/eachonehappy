<tr>

  
  <td>
   
    <%= link_to "#{my_fundraise.subject}", fundraise_path(my_fundraise) ,data: {  turbolinks: false }%>
    
  </td>
  <td>Rs. <%= my_fundraise.target %>
  </td>
  <td>Rs. <%= my_fundraise.raised_amount %>
  </td>
  <td>
   <% if my_fundraise.payment_is_pending == false%>
   <%= link_to "Transfered", nil, :disabled => true, :class => "btn btn-success" %>
   <% elsif my_fundraise.payment_is_pending %>
    
   <%= link_to "Pending...", nil, :disabled => true, :class => "btn btn-success" %>
   <% else %>
     <% if my_fundraise.raised_amount > my_fundraise.target/2 %>
      <%= link_to "redeem", new_fundraise_payment_detail_path(my_fundraise), :class=>"btn btn-info" ,data: {  turbolinks: false, disable_with: 'Wait ...' }%>
      <% else %>
        Increase Raised amount
      <% end %>
    <% end %>  
  </td>
</tr>
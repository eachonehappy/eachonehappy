<div class="timeline-block">
  <div class="panel panel-default">
      
      <div class="panel-body">
          <div class="boxed">
              <a href="#" class="h4 margin-none"><%= link_to "#{@fundraise.subject}" , fundraise_path(@fundraise)%></a>
              
              <div class="media">
                  <a href="#" class="media-object pull-left">
                      <img src="/images/place1-full.jpg" class="img-responsive" />
                  </a>
                  <div class="media-body">
                      <p><%=@fundraise.target%></p>
                      <%= @fundraise.followers_count %> Followers 
                        <br>
                        <%= @fundraise.likers_count %> Likes
                      <div class="btn-group">
                          <div class="btn-group pull-right">
                      <% if current_user.likes?(@fundraise)  %>
                        <%= link_to "Unlike", like_fundraise_path(:fundraise_id => @fundraise.id), :method => :post, :class=>"btn btn-danger" %>
                        <% else %>
                        <%= link_to "Like", like_fundraise_path(:fundraise_id => @fundraise), :method => :post, :class=>"btn btn-info" %>
                        <% end %>
                        </div>
                        </div>
                        <div class="btn-group">
                          <div class="btn-group pull-right">
                            <% if current_user.follows?(@fundraise)  %>
                            <%= link_to "Unfollow", follow_fundraise_path(:fundraise_id => @fundraise.id), :method => :post, :class=>"btn btn-danger" %>
                            <% else %>
                            <%= link_to "Follow", follow_fundraise_path(:fundraise_id => @fundraise), :method => :post, :class=>"btn btn-info" %>
                            <% end %>         
                          </div>       
                        </div>
                  </div>
              </div>
              <ul class="icon-list">
                  <li><i class="fa fa-star fa-fw"></i> 4.8</li>
                  <li><i class="fa fa-clock-o fa-fw"></i> 20 min</li>
                  <li><i class="fa fa-graduation-cap fa-fw"></i> Rs.<%=@fundraise.target%></li>
              </ul>
          </div>
      </div>
      
     
  </div>
  </div>
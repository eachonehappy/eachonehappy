<div class="col-md-9" style="padding:0px;">
  <div class="panel panel-default" style="margin-bottom: 10px;border-radius: 2px;">
    <div class="panel-body" style="padding-bottom:0px;padding-top:10px;">
      <center>
        <h3 class = "margin-none text-uppercase"><b><%=@fundraise.subject%></b></h3> 
      </center>
      <div class="media">
        <div class="media-object pull-left">
          <% if @fundraise.image_url %> 
            <%= image_tag @fundraise.image_url :normal, :class=>"img-responsive", :style=>"padding:5px;"%>
          <% else %>
            <img src="/images/food1-full.jpg" alt="image" class="img-responsive" style="padding:5px;" />
          <% end %>
        </div>
        <div class="media-body">
          <h4 class = "margin-none text-capitalize"><%=@fundraise.small_description%></h4><br>
          <h3 class = "margin-none text-capitalize"><%=@fundraise.description%></h3>
          <br>
          <%if @fundraise.mentionees(User).any? %>
          with
          <%@fundraise.mentionees(User).each do |user|%>
            <%= link_to "#{user.first_name} #{user.last_name}", user_path(user), :class => "text-capitalize"%>
            <%end%>
          <%end%>
          <br><br>
          <h3 class="margin-none text-capitalize"> Goal : Rs. <%=@fundraise.target%></h3><br>
          <h3><%= @fundraise.followers_count %> Followers</h3>
          <h3><%= @fundraise.likers_count %> Likes</h3>     
        </div>
      </div>
      <div class="btn-group btn-group-footer btn-group-justified" style="margin-top:10px;">
        <% if current_user.likes?(@fundraise)  %>
          <%= link_to '<i class="fa fa-heart"></i>Unlike'.html_safe, like_fundraise_path(:fundraise_id => @fundraise.id), :method => :post, :class=>"btn" %>
        <% else %>
          <%= link_to '<i class="fa fa-heart"></i>Like'.html_safe, like_fundraise_path(:fundraise_id => @fundraise), :method => :post, :class=>"btn" %>
        <% end %>
        <% if current_user.follows?(@fundraise)  %>
          <%= link_to '<i class="fa fa-user"></i> Unfollow'.html_safe, follow_fundraise_path(:fundraise_id => @fundraise.id), :method => :post, :class=>"btn" %>
        <% else %>
          <%= link_to '<i class="fa fa-user"></i> Follow'.html_safe, follow_fundraise_path(:fundraise_id => @fundraise), :method => :post, :class=>"btn" %>
        <% end %>                  
        <a href="#" class="btn"><i class="fa fa-user"></i> Share</a>
      </div>
    </div>
  </div>
</div>
<div class="timeline-block" style="margin-bottom:10px;">
  <div class="panel panel-default" style="border-radius: 2px; margin-bottom:0px;">
    <div class="panel-body text-center" style="padding-bottom:5px;">
      <%= link_to "#{cause.subject}" , cause_path(cause), data: { turbolinks: false }, :class => "h4 margin-none text-capitalize"%> 
    </div>
    <%= link_to  cause_path(cause)do %>
      <% if cause.image_url %> 
        <%= image_tag cause.image_url.to_s, :class=>"img-responsive", :style=>"padding:5px;"%>
      <% else %>
        <img src="/images/food1-full.jpg" alt="image" class="img-responsive" style="padding:5px;" />
      <% end %>
    <% end %>
    <div class="panel-body" style="padding-bottom:5px;padding-top:5px;">
      <p class="text-capitalize"><%=cause.small_description%></p>
      <div>
        <a  class="text-muted"> <%= cause.likers_count %> Likes <i class="fa fa-heart"></i></a>
        <a  class="text-muted">  <%= cause.followers_count %> Followers <i class="fa fa-user"></i></a>
      </div>
    </div>
    <div class="btn-group btn-group-footer btn-group-justified" >
      <% if current_user.likes?(cause)  %>
      <%= link_to '<i class="fa fa-heart"></i>Unlike'.html_safe, like_cause_path(:cause_id => cause.id), :method => :post, :class=>"btn" %>
      <% else %>
      <%= link_to '<i class="fa fa-heart"></i>Like'.html_safe, like_cause_path(:cause_id => cause), :method => :post, :class=>"btn" %>
      <% end %>
      <% if current_user.follows?(cause)  %>
      <%= link_to '<i class="fa fa-user"></i> Unfollow'.html_safe, follow_cause_path(:cause_id => cause.id), :method => :post, :class=>"btn" %>
      <% else %>
      <%= link_to '<i class="fa fa-user"></i> Follow'.html_safe, follow_cause_path(:cause_id => cause), :method => :post, :class=>"btn" %>
      <% end %>
      <a href="#" class="btn"><i class="fa fa-user"></i> Share</a>
    </div>
  </div>                
</div>

<div class="col-md-7">
	<div class="panel panel-default">
    <div class="panel-heading panel-heading-gray">Add a cause
    </div>
    <div class="panel-body">
      <div class="form-horizontal" role="form">
      <%= form_for(@cause) do |f| %>
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-3 control-label">Subject</label>
          <div class="col-sm-9">
            <%= f.text_field :subject, class: 'form-control', :id=>"inputEmail3", :placeholder=>"Subject" %> 
          </div>
        </div>
        <div class="form-group"> 
          <label for="inputEmail3" class="col-sm-3 control-label">Add a Picture</label> 
          <div class="col-sm-9">          
            <%= f.file_field :image , :class=>"btn btn-primary btn-sm pull-left"%>
          </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Small Description</label>
            <div class="col-sm-9">
          	<%= f.text_field :small_description, class: 'form-control', :rows=>"5", :placeholder=>"Small Description..." %>    
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Large Description</label>
            <div class="col-sm-9">
            <%= f.text_area :description, class: 'form-control', :rows=>"4", :placeholder=>"Large Description" %>   
            </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-9">
            <%= f.submit "Submit", class: "btn btn-primary" %>
          </div>
        </div> 
      <% end %>
      </div>
    </div>
  </div>             
</div>
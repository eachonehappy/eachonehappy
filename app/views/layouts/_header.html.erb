<% unless user_signed_in? %>
  <div class="container-fluid homenav bottom-border">
    <div class="container white">
        <nav class="navbar">     
          <%= link_to "Eachonehappy", pages_home_path, :class => "navbar-brand brandmargin white" %>          
          <%= render 'devise/shared/login' %>
        </nav>
    </div>
  </div>           
<% else %> 
  <div class="container-fluid">    
    <nav class="navbar navbar-fixed-top margin-bottom nav-inline logged-nav bottom-border" style="min-height: 30px;"> 
      <div class="white container">  
      <%= link_to "Eachonehappy", pages_home_path, :class => "navbar-brand white min-height" %>
      <div class="col-lg-5">
        <div class="input-group">
          <input type="text" class="form-control searchbar-height" placeholder="Search for...">
          <span class="input-group-btn">
            <button class="btn btn-secondary btn-sm" style="padding-top: 5px" type="button"><span class="glyphicon glyphicon-search" aria-hidden="user"></span></button>
          </span>
        </div>
      </div>
        <div class="float-xs-right"> 
          <ul class="list-inline">
            <li>      
              <b><%= link_to "#{current_user.first_name}", users_path, :class => "white btn-space" %></b>
            </li>   
            <li>
              <div class="dropdown anchor-height">
                <a class="btn-md dropdown-toggle-split btn-space" id="supportedContentDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-user" aria-hidden="user"></span>
                </a>        
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="supportedContentDropdown1">
                  <% current_user.requested_friends.each do |user| %>
                  <a class="dropdown-item btn-space" ><%= user.first_name %><%= link_to "Accept", accept_path(:friend_id => user), :method => :post, :class=>"btn btn-info btn-md" %> </a>
                  <% end %>            
                </div>
              </div>
            </li>
            <li>
              <div class="dropdown anchor-height">
                <a class="btn-md dropdown-toggle-split btn-space" id="supportedContentDropdown3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="fa fa-comments" aria-hidden="user"></span>
                </a>        
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="supportedContentDropdown3">
                  <a class="dropdown-item btn-space" ><%= link_to "Chat with freinds", chat_rooms_path,  :class=>"btn btn-warning btn-md" %> </a>            
                </div>
              </div>
            </li>
            <li>
              <div class="dropdown anchor-height"> 
                <a class="btn-md dropdown-toggle dropdown-toggle-split" id="supportedContentDropdown2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="supportedContentDropdown2">
                  <a class="dropdown-item" href="#">Profile</a>
                  <%= link_to "Log Out", destroy_user_session_path, method: :delete, :class=>"dropdown-item" %>
                </div>
              </div>
            </li>
          </ul>
        </div>        
      </div> 
    </nav>
  </div>        
<% end %>               
  
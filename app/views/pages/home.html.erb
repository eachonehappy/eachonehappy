<div class="col-md-6" >
  <div class="timeline-block">
		<div class="panel panel-default share">
	    <div class="panel-heading panel-heading-gray title">
	      What&acute;s new
	    </div>
      <%= form_for @post, :html =>{:multipart => true} do |f| %>
		    <div class="panel-body">
		    <%= f.text_area :description, class: 'form-control share-text', :rows=>"3", :placeholder=>"Whats in Your Mind..." %>
		       
		    </div>
		    <div class="panel-footer share-buttons">
		       
		        <%= f.file_field :image , :class=>"btn btn-default btn-sm pull-left"%>
		        <a href="#">
		            
		        </a>
		        <%= f.submit "Post", :class=> "btn btn-primary btn-sm pull-right" %>
		        
		    </div>
	    <%end%>
		</div>
	</div>
	<% @posts.each do |post|%>
	  <div class="timeline-block">
	    <div class="panel panel-default">
	      <div class="panel-heading">
	        <div class="media">
	          <a href="" class="pull-left">
	            <img src="/images/people/50/woman-5.jpg" class="media-object">
	          </a>
	          <div class="media-body">
	            <a href="#" class="pull-right text-muted"><i class="icon-reply-all-fill fa fa-2x "></i></a>
	            <a href=""><%=post.user.first_name%></a>
	            <span>on 15th January, 2014</span>
	          </div>
	        </div>
	      </div> 
	         <%= image_tag post.image_url.to_s, :class=>"img-responsive" %>                        
	      
	        <p style="margin-bottom: 5px;margin-top: 5px;">Hey iam aditya</p>
	        <div class="actions">
	        <div class="btn-group">
	          <button type="button" class="btn btn-link"><i class="fa fa-thumbs-o-up"></i> Like</button>
	          <button type="button" class="btn btn-link"><i class="fa fa-share"></i> Share</button>
	        </div>
	      </div>
	      <div class="view-all-comments"><a href="#"><i class="fa fa-comments-o">  </i> View all</a> 10 comments
	      </div>
	      <ul class="comments">
	        <%post.comments.each do |comment|%>
		        <li>
		          <div class="media">
		            <a href="" class="pull-left">
		              <img src="/images/people/50/guy-5.jpg" class="media-object">
		            </a>
		            <div class="media-body">
		              <a href="" class="comment-author"><%= comment.user.first_name %></a>
		              <span><%= comment.description %></span>
		              <div class="comment-date">21st September
		              </div>
		            </div>
		          </div>
		        </li>
		      <%end%>  
		        <li>
		          <div class="media">
		            <a href="" class="pull-left">
		              <img src="/images/people/50/woman-5.jpg" class="media-object">
		            </a>
		            <div class="media-body">
		              <a href="" class="comment-author">Mary</a>
		              <span>Thanks Bill</span>
		              <div class="comment-date">2 days</div>
		            </div>
		          </div>
		        </li>
		        <li>
		          <div class="media">
		            <a href="" class="pull-left">
		              <img src="/images/people/50/guy-5.jpg" class="media-object">
		            </a>
		            <div class="media-body">
		              <a href="" class="comment-author">Bill D.</a>
		              <span>What time did it finish?</span>
		              <div class="comment-date">14 min</div>
		            </div>
		          </div>
		        </li>
	        <li class="comment-form">                                           
	          <%= form_for @comment do |f| %>                      
	            <div class="input-group">  
	              <%= hidden_field_tag 'post_id', post.id %> 
	              <%= f.text_field :description, class: 'form-control', :placeholder=>"write a comment" %>
	              <span class="input-group-btn">          
	              	<%= f.submit "Comment", class: "btn btn-primary" %>
	 						  </span>
	            </div>
	          <% end %>      
	        </li>        
	      </ul>
	    </div>
	  </div>
  <%end%> 
</div>
                
               
<div class="col-md-6">
	<%= render 'users/timeline'%>
	<%= render 'users/timeline'%>
</div>

<% if current_user.admin %>
<div class="sidebar-chat right sidebar-size-2 sidebar-offset-0 chat-skin-white" >
<div class="split-vertical" style="min-height:580px;">
    <div class="chat-search">
      <input type="text" class="form-control" placeholder="Search" />
    </div>

    <ul class="chat-filter nav nav-pills ">
      <li class="active"><a href="#" data-target="li">All</a></li>
      <li><a href="#" data-target=".online">Online</a></li>
      <li><a href="#" data-target=".offline">Offline</a></li>
    </ul>
    <div class="split-vertical-body">
      <div class="split-vertical-cell">
        <div data-scrollable>
          <ul class="chat-contacts">
          <% @users.each do |user|%>
          
            <% if user.online? %>  
            <li class="online">
            
              <%= link_to user_path(user), data: { turbolinks: false } do  %>        
                <div class="media" style="height: 45px;">
                  <div class="pull-left" style="padding-top: 8px;padding-bottom: 7px;">
                    <span class="status" style="margin-top: 12px;"></span>
                    <% if user.profile_image_url %> 
                      <%= image_tag(user.profile_image_url(:thumb), :class=>"img-circle" , :width=>"30") %>
                      <% else %>
                      <img src="/images/profile.png" width="30" alt="Bill" class="img-circle" />
                      <% end %>
                  </div>
                  <div class="media-body">

                    <div class="contact-name text-capitalize"><%= full_name(user) %></div>
                    
                  </div>
                </div>
              <%end%>
            </li>
            <% else %>
              <li class="offline">
              <%= link_to user_path(user), data: { turbolinks: false } do  %>
                <div class="media" style="height: 45px;">
                  <div class="pull-left" style="padding-top: 8px;padding-bottom: 7px;">
                    <span class="status" style="margin-top: 12px;"></span>
                    <% if user.profile_image_url %> 
                      <%= image_tag(user.profile_image_url(:thumb), :class=>"img-circle" , :width=>"30") %>
                      <% else %>
                      <img src="/images/profile.png" width="30" alt="Bill" class="img-circle" />
                      <% end %>
                  </div>
                  <div class="media-body">

                    <div class="contact-name text-capitalize"><%= full_name(user) %></div>
                    
                  </div>
                </div>
              <%end%>
            </li>
            <%end%>
            <%end%>
         
          </ul>
        </div>
      </div>
    </div>
  </div>
  </div>
<% end %>
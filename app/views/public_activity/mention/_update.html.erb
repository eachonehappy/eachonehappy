<li class="media">
  <div class="media-left">
    <% if activity.owner.profile_image_url %> 
    <%= image_tag(activity.owner.profile_image_url(:thumb)) %>
    <% else %>
    <img src="/images/profile.png" alt="people" width="35" class="img-circle" width="30">
    <% end %>
  </div>
  <div class="media-body">
    <%=link_to "#{activity.owner.first_name}", user_path(activity.owner), data: { turbolinks: false } %> 
    <% if a.trackable %>
      mentioned you in <%= a.trackable.mentionable_type %> 
    <% else %>
      unmentioned your post which was unliked.
    <% end %>
    <br/>
    <span class="text-caption text-muted"><%= a.created_at.strftime('%H:%M:%S %-d %B %Y') %></span>
  </div>
</li>
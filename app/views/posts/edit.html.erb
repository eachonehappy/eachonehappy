<div class="col-md-7">
  <div class="panel panel-default">
      <div class="panel-heading panel-heading-gray">Edit a Post</div>
      <div class="panel-body">
     
          <div class="form-horizontal" role="form">
          <% flash.each do |key, value| %>
            <div class="alert alert-info alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= value %></div>
          <% end %>
          <%= form_for(@post, validate: true,:html =>{:multipart => true}) do |f| %>

              <div class="form-group">
                  <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Description</strong></div>
                  <div class="col-sm-9">
                  <%= f.text_field :description, class: 'form-control', :placeholder=>"Description" %>
                    
                  </div>
              </div>
              <div class="form-group"> 
                <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Add a Picture</strong></div>
                <div class="col-sm-9">          
                  <%= f.file_field :image , :class=>"btn btn-primary btn-sm pull-left"%>
                </div>
              </div>
              <div class="form-group">
              <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Tag Friends</strong></div>
                  <div class="col-sm-9">
                <%= f.select(:user_id, @all_user.collect {|c| [c.first_name, c.id]},{},
                   { :multiple => true, :size => 5,:class=>"selectpicker","data-live-search" =>"true","multiple data-style"=>"btn-white" }
                 ) %>
              </div>
             </div>

                     
              <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <%= f.submit "Submit", class: "btn btn-primary" %>
                    </div>
                </div>
              
              <% end %>
          </div>
          
      </div>
  </div>
               
</div>


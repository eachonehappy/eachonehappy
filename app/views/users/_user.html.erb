<tr>
  <td><%= link_to "#{user.first_name}  #{user.last_name}", user_path(user), :class=>"text-capitalize" %></td>
  <td><img src="http://bootdey.com/img/Content/user_1.jpg" class="img-circle avatar" alt="user profile image"></td>
  <td><%= user.email%>
  </td>
  <td>
    <% if current_user.friends_with?(user)  %>
    <%= link_to "Remove Friend", remove_path(:friend_id => user), :method => :post, :class=>"btn btn-danger" %>
    <% elsif current_user.pending_friends.include?(user) %>
    <button class="btn btn-primary">Friend request send</button>
    <% elsif current_user.requested_friends.include?(user) %>
    <%= link_to "Accept Request", accept_path(:friend_id => user), :method => :post, :class=>"btn btn-info" %>
    <% else %>
    <%= link_to "Add Friend", invite_path(:friend_id => user), :method => :post, :class=>"btn btn-info" %>
    <% end %>
  </td>
</tr>
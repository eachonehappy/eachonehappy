<tr>
  <td><%= link_to "#{user.first_name}  #{user.last_name}", user_path(user), :class=>"text-capitalize" %></td>
  <td><% if user.profile_image_url %> 
            <%= image_tag(user.profile_image_url(:thumb)) %>
            <% else %>
            <img src="/images/people/50/guy-5.jpg" width="35" alt="Bill" class="img-circle" />
            <% end %></td>
  <td><%= user.email%>
  </td>
  <td>
    <% if current_user.pending_friends.include?(user) %>
     <%= link_to "Friend request send",nil ,:class=>"btn btn-info", remote: true, :disabled=> true %>
    <%else%>
    <%= link_to "Add Friend", invite_path(user), :method => :post, :class=>"friend btn btn-info", remote: true, data: { toggle_text: 'Friend request send', toggle_href: invite_path(user), id: user.id } %>
    <% end %>
  </td>
</tr>
<div class="login" style="padding-bottom:100px;">
  <div class="container-fluid">
    <div class="brand-logo">
      <i class="fa fa-pencil"></i>
    </div>
    <div class="row">
      <h1>Create a new account</h1>
      <div class="col-sm-4 col-sm-offset-4">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true) do |f| %>
                
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.text_field :first_name, autofocus: true, :class=>"form-control", :placeholder=>"First name", :type=>"text" %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.text_field :last_name, autofocus: true, :class=>"form-control", :placeholder=>"Last name", :type=>"text" %>
                  </div>
                </div>
              </div>  
              <div class="form-group">
                <%= f.email_field :email,validate: { uniqueness: true }, autofocus: true, :class=>"form-control", :placeholder=>"Email", :type=>"text" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", :class=>"form-control", :placeholder=>"password", :type=>"password" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control", :placeholder=>"password confirmation", :type=>"password" %>
              </div>
              
              <div class="text-center">
                <%= f.submit "Create an Account", :class=>"btn btn-primary",data: { disable_with: 'Creating Account' } %>
              </div>
            <% end %>
             <%= link_to 'Already a Member? <b> Sign In </b>'.html_safe , new_user_session_path, :class=>"forgot-pass"%>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>





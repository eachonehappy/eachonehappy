<div class="timeline-block">
                    <div class="panel panel-default">
                        
                        <div class="panel-body">
                            <div class="boxed">
                                <a href="#" class="h4 margin-none"><%= link_to "#{@campaign.subject}" , campaign_path(@campaign)%></a>
                                
                                <div class="media">
                                    <a href="#" class="media-object pull-left">
                                        <img src="/images/place1-full.jpg" class="img-responsive" />
                                    </a>
                                    <div class="media-body">
                                        <p><%=@campaign.description%></p>
                                        <%= @campaign.followers_count %> Followers 
                                        <br>
                                        <%= @campaign.likers_count %> Likes
                                        <br>
                                    with
                                    <%@campaign.mentionees(User).each do |user|%>
              
                                      <%= link_to "#{user.first_name} #{user.last_name}", user_path(user), :class => "text-capitalize"%>
                                      <%end%><br>

                                         <div class="btn-group">
                                          <div class="btn-group pull-right">
                                      <% if current_user.likes?(@campaign)  %>
                                        <%= link_to "Unlike", like_campaign_path(:campaign_id => @campaign.id), :method => :post, :class=>"btn btn-danger" %>
                                        <% else %>
                                        <%= link_to "Like", like_campaign_path(:campaign_id => @campaign), :method => :post, :class=>"btn btn-info" %>
                                        <% end %>
                                        </div>
                                        </div>
                                        <div class="btn-group">
                                          <div class="btn-group pull-right">
                                            <% if current_user.follows?(@campaign)  %>
                                            <%= link_to "Unfollow", follow_campaign_path(:campaign_id => @campaign.id), :method => :post, :class=>"btn btn-danger" %>
                                            <% else %>
                                            <%= link_to "Follow", follow_campaign_path(:campaign_id => @campaign), :method => :post, :class=>"btn btn-info" %>
                                            <% end %>         
                                          </div>       
                                        </div>
                                    </div>
                                </div>
                                <ul class="icon-list">
                                    <li><i class="fa fa-star fa-fw"></i> 4.8</li>
                                    <li><i class="fa fa-clock-o fa-fw"></i> 20 min</li>
                                    <li><i class="fa fa-graduation-cap fa-fw"></i> Beginner</li>
                                </ul>
                            </div>
                        </div>
                        
                       
                    </div>
                </div>
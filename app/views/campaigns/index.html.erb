<div class="col-md-9" style="padding:0px;">
<div class="ibox-title" style="background-color: white;">
      <h1 class="title pull-left" style="margin-top: 10px;
    margin-bottom: 10px; margin-left: 10px;">
        <%= "Campaigns" %>
      </h1>
      <form class="navbar-form navbar-left hidden-xs" role="search">
      <%= form_tag campaigns_path, :method => 'get' do%>
        <div class="search-2">
          <div class="input-group">
           
            <%= text_field_tag :search, params[:search],:class=>"form-control form-control-w-150", :placeholder=>"Search .."  %>
            
            <span class="input-group-btn">
            <%= submit_tag 'Search', :class=>"btn btn-primary"%>
             
            </span>
          </div>
        </div>
        <%end%>
      </form>
     
        <%= link_to "Start a Campaign", new_campaign_path, data: { turbolinks: false, disable_with: 'Wait ...' }, class: 'btn btn-primary pull-right ', :style=> "margin-top: 10px;
    margin-right: 10px;"%>
    
      <div class="clearfix"></div>
   
</div>
<div class="row" data-toggle="isotope" style="padding-bottom: 10px;">
<%= render @campaigns %>
</div>
<div style="padding-left:30px;">
   <%= render 'shared/uberad' %>
</div>

  
</div>

 <div class="col-md-3" style="padding-left: 0px;

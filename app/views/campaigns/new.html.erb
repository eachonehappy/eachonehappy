<div class="col-md-7">
  <div class="panel panel-default">
      <div class="panel-heading panel-heading-gray">Start a Campaign</div>
      <div class="panel-body">
     
          <div class="form-horizontal" role="form">
          <%= form_for(@campaign) do |f| %>
              <div class="form-group">
                  <label for="inputEmail3" class="col-sm-3 control-label">Subject</label>
                  <div class="col-sm-9">
                  <%= f.text_field :subject, class: 'form-control', :id=>"inputEmail3", :placeholder=>"Name" %>
                    
                  </div>
              </div>
              <div class="form-group">
                  <label for="inputEmail3" class="col-sm-3 control-label">Subject</label>
                  <div class="col-sm-9">
                  <%= f.text_field :description, class: 'form-control', :id=>"inputEmail3", :placeholder=>"Description" %>
                    
                  </div>
              </div>
              <div class="form-group">
                  <label class="col-sm-3 control-label">Organization</label>
                  <div class="col-sm-9">
                 

              <%= f.select(:organization_id, @all_organizations.collect {|c| [c.name, c.id]},{},
                                   { :size => 5,:class=>"selectpicker","data-live-search" =>"true","data-style"=>"btn-white" }
                                 ) %>

                  </div>
              </div>
              <div class="form-group">
                  <label class="col-sm-3 control-label">Causes</label>
                  <div class="col-sm-9">
                 

              <%= f.select(:cause_id, @all_causes.collect {|c| [c.subject, c.id]},{},
                                   { :size => 5,:class=>"selectpicker","data-live-search" =>"true","data-style"=>"btn-white" }
                                 ) %>
                  </div>
              </div>
              
                     
              <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <%= f.submit "Submit", class: "btn btn-primary" %>
                    </div>
                </div>
              
              <% end %>
          </div>
          
      </div>
  </div>
               
</div>
<div class="col-md-7">
<% if @all_organizations.empty? %>
<div class="ibox-title" style="background-color: white;">
      <h1 class="title pull-left" style="margin-top: 10px;
    margin-bottom: 10px; margin-left: 10px;">
        You don't have any organization
      </h1>
    
        <%= link_to "Start a Organization", new_organization_path, data: { turbolinks: false,disable_with: 'Wait ...' }, class: 'btn btn-primary pull-right ', :style=> "margin-top: 10px;
      margin-right: 10px;"%>
     
      <div class="clearfix"></div>
   
</div>

<% else %>
  <div class="panel panel-default">
      <div class="panel-heading panel-heading-gray">Start a Campaign</div>
      <div class="panel-body">
     
          <div class="form-horizontal" role="form">
          <% flash.each do |key, value| %>
            <div class="alert alert-info alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= value %></div>
          <% end %>
          <%= form_for(@campaign, validate: true, :html =>{:multipart => true}) do |f| %>
              <div class="form-group">
                  <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Title</strong></div>
                  <div class="col-sm-9">
                  <%= f.text_field :subject, class: 'form-control', :placeholder=>"Title" %>
                    
                  </div>
              </div>
              <div class="form-group">
                  <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Small Description</strong></div>
                  <div class="col-sm-9">
                  <%= f.text_area :small_description, class: 'form-control', :rows=>"2", :placeholder=>"small description" %>
                    
                  </div>
              </div>
              <div class="form-group">
                  <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong>Larger Description</strong></div>
                  <div class="col-sm-9">
                  <%= f.text_area :description, class: 'form-control', :placeholder=>"description", :rows=>"4" %>
                    
                  </div>
              </div>
              <div class="form-group"> 
                <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Add a Picture</strong></div>
                <div class="col-sm-9">          
                  <%= f.file_field :image , :class=>"btn btn-primary btn-sm pull-left"%>
                </div>
              </div>
              <div class="form-group">
                 <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Organization</strong></div>
                  <div class="col-sm-9">
                 

              <%= f.select(:organization_id, @all_organizations.collect {|c| [c.name, c.id]},{},
                                   { :size => 5,:class=>"selectpicker","data-live-search" =>"true","data-style"=>"btn-white" }
                                 ) %>

                  </div>
              </div>
              <div class="form-group">
                  <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Causes</strong></div>
                  <div class="col-sm-9">
                 

              <%= f.select(:cause_id, @all_causes.collect {|c| [c.subject, c.id]},{},
                                   { :size => 5,:class=>"selectpicker","data-live-search" =>"true","data-style"=>"btn-white" }
                                 ) %>
                  </div>
              </div>
              <div class="form-group">
              <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Tag friends</strong></div>
                  <div class="col-sm-9">
                <%= f.select(:user_ids, @users.collect {|c| [c.first_name, c.id]},{},
                   { :multiple => true, :size => 5,:class=>"selectpicker","data-live-search" =>"true","multiple data-style"=>"btn-white" }
                 ) %>
              </div>
             </div>
              
                     
              <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <%= f.submit "Submit", class: "btn btn-primary" %>
                    </div>
                </div>
              
              <% end %>
          </div>
          
      </div>
  </div>
 <% end %>              
</div>


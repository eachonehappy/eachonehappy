<h1>Add a Organization</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@campaign) do |f| %>
    
      <%= f.label :subject %>
      <%= f.text_field :subject, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
      
      <%= f.label 'All organization' %>
      <%= collection_select(:organization, :id, @all_organizations, :id, :name) %>

      <%= f.label 'All causes' %>
      <%= collection_select(:cause, :id, @all_causes, :id, :subject) %>
     
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
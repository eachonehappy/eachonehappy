<h1>Add a Jobs</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@job) do |f| %>
    
      <%= f.label :subject %>
      <%= f.text_field :subject, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
      
      <%= f.label 'All campaign' %>
      <%= collection_select(:campaign, :id, @all_campaign, :id, :subject) %>
     
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<div class="col-md-7">
  <div class="panel panel-default">
      <div class="panel-heading panel-heading-gray">Create a Job</div>
      <div class="panel-body">
     
          <div class="form-horizontal" role="form">
          <% flash.each do |key, value| %>
            <div class="alert alert-info alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= value %></div>
          <% end %>
          <%= form_for(@job, validate: true) do |f| %>
              <div class="form-group">
                 <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Title</strong></div>
                  <div class="col-sm-9">
                  <%= f.text_field :subject, class: 'form-control', :placeholder=>"Title" %>
                    
                  </div>
              </div>
              <div class="form-group">
                  <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Description</strong></div>
                  <div class="col-sm-9">
                  <%= f.text_field :description, class: 'form-control', :placeholder=>"Description" %>
                    
                  </div>
              </div>
              
              <div class="form-group">
              <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Assigned to</strong></div>
                  <div class="col-sm-9">
                <%= f.select(:user_ids, @all_user.collect {|c| [c.first_name, c.id]},{},
                   { :multiple => true, :size => 5,:class=>"selectpicker","data-live-search" =>"true","multiple data-style"=>"btn-white" }
                 ) %>
              </div>
             </div>
              
                     
              <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <%= f.submit "Submit", class: "btn btn-primary" %>
                    </div>
                </div>
              
              <% end %>
          </div>
          
      </div>
  </div>
               
</div>
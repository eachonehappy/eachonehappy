<div class="col-md-7">
  <div class="panel panel-default">
      <div class="panel-heading panel-heading-gray">Add a Organization</div>
      <div class="panel-body">
     
          <div class="form-horizontal" role="form">
          <% flash.each do |key, value| %>
            <div class="alert alert-info alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= value %></div>
          <% end %>
          <%= form_for(@organization, validate: true) do |f| %>
           
              <div class="form-group">
                  <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Name</strong></div>
                  <div class="col-sm-9">
                  <%= f.text_field :name, class: 'form-control', :placeholder=>"Name" %>
                    
                  </div>
              </div>
              <div class="form-group">
                  <div for="inputEmail3" class="col-sm-3 control-label text-bold"><strong> Description</strong></div>
                  <div class="col-sm-9">
                  <%= f.text_area :description, class: 'form-control', :placeholder=>"description" %>
                    
                  </div>
              </div>
              
                     
              <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <%= f.submit "Submit", class: "btn btn-primary" %>
                    </div>
                </div>
              
              <% end %>
          </div>
          
      </div>
  </div>
               
</div>


<div class="col-md-7">
  <div class="panel panel-default">
      <div class="panel-heading panel-heading-gray">Add a Organization</div>
      <div class="panel-body">
     
          <div class="form-horizontal" role="form">
          <%= form_for(@organization) do |f| %>
              <div class="form-group">
                  <label for="inputEmail3" class="col-sm-3 control-label">Name</label>
                  <div class="col-sm-9">
                  <%= f.text_field :name, class: 'form-control', :id=>"inputEmail3", :placeholder=>"Name" %>
                    
                  </div>
              </div>
              <div class="form-group">
                  <label class="col-sm-3 control-label">Causes</label>
                  <div class="col-sm-9">
                 

              <%= f.select(:cause_ids, @all_causes.collect {|c| c.subject},{},
                                   { :multiple => true, :size => 5,:class=>"selectpicker","data-live-search" =>"true","multiple data-style"=>"btn-white" }
                                 ) %>
                  </div>
              </div>
              
                     
              <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <%= f.submit "Submit", class: "btn btn-primary" %>
                    </div>
                </div>
              
              <% end %>
          </div>
          
      </div>
  </div>
               
</div>
<h1>Add a Cause</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@comment) do |f| %>
      
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %><br>
      
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
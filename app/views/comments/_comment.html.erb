<div class="paddingleft15">
  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-white post panel-shadow bgwhite">
        <div class="post-heading">
          <div class="pull-left image">
            <img src="http://bootdey.com/img/Content/user_1.jpg" class="img-circle avatar" alt="user profile image">
          </div>
          <div class="pull-left meta">
            <div class="title h5">
              <a class="text-capitalize" href="#"><b><%= current_user.email %></b></a>
              <a class="text-muted time small"> created <%= time_ago_in_words(comment.created_at) %> ago</a>
            </div>
            <br>
            <h5 class="text-primary text-capitalize"><%= comment.description %></h5>
          </div>
        </div> 
        <div class="post-description"> 
          <p><%= comment.description %></p>
          <div class="stats">
            <a href="#" class="btn btn-default stat-item">
                <i class="fa fa-thumbs-up icon"></i>2
            </a>
            <a href="#" class="btn btn-default stat-item">
                <i class="fa fa-share icon"></i>12
            </a>
          </div>
        </div>
        <%= link_to "delete",comment,  method: :delete ,data: { confirm: "You sure?" }, :class=>"btn btn-danger btn-xs" %>
      </div><br>
    </div>
  </div>
</div>